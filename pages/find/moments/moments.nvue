				class="bg-secondary rounded position-absolute bottom-0" mode=""></image>
			<text class="font-md text-white position-absolute" style="bottom: 60rpx;right: 160rpx;">{{nickname}}</text>
		</view>
		<view style="height: 120rpx;">

		</view>
