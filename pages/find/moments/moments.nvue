			<view class="rounded flex align-center justify-between p-1" style="height: 80rpx;width: 290rpx;background-color: #5c5c5c;">
				<free-avater :src="notice.avatar?notice.avatar:'/static/images/userpic.png'" size="60">
				</free-avater>
